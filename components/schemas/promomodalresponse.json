{
  "type": "object",
  "required": [
    "modalId",
    "title",
    "bodyMarkdown",
    "cta",
    "displayRules"
  ],
  "properties": {
    "modalId": {
      "type": "string",
      "example": "MODAL-TF-001"
    },
    "title": {
      "type": "string"
    },
    "bodyMarkdown": {
      "type": "string"
    },
    "cta": {
      "type": "object",
      "required": [
        "label",
        "href"
      ],
      "properties": {
        "label": {
          "type": "string",
          "example": "View Offers"
        },
        "href": {
          "type": "string",
          "example": "/offers"
        }
      }
    },
    "displayRules": {
      "type": "object",
      "required": [
        "maxViewsPerUser",
        "cooldownHours",
        "startDate",
        "endDate"
      ],
      "properties": {
        "maxViewsPerUser": {
          "type": "integer",
          "example": 3
        },
        "cooldownHours": {
          "type": "integer",
          "example": 24
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        }
      }
    }
  },
  "readOnly": true
}